<PropertyList include="Lockheed1049h-common.xml">

  <!-- never be nil for copilot -->
  <engines n="0">
    <engine n="0">
      <running type="bool">0</running>
      <fuel-flow-gph type="double">0</fuel-flow-gph>
    </engine>
    <engine n="1">
      <running type="bool">0</running>
      <fuel-flow-gph type="double">0</fuel-flow-gph>
    </engine>
    <engine n="2">
      <running type="bool">0</running>
      <fuel-flow-gph type="double">0</fuel-flow-gph>
    </engine>
    <engine n="3">
      <running type="bool">0</running>
      <fuel-flow-gph type="double">0</fuel-flow-gph>
    </engine>
  </engines>       

  <!-- never be nil for copilot -->
  <fdm>
    <jsbsim>
      <propulsion>
        <engine n="0">
          <power-hp type="double">0</power-hp>
        </engine>
        <engine n="1">
          <power-hp type="double">0</power-hp>
        </engine>
        <engine n="2">
          <power-hp type="double">0</power-hp>
        </engine>
        <engine n="3">
          <power-hp type="double">0</power-hp>
        </engine>
      </propulsion>
    </jsbsim>
  </fdm>

  <nasal>
    <copilot>
      <file>Nasal/mk-copilot.nas</file>
    </copilot>
    <dual_control>
      <file>Aircraft/Generic/DualControl/copilot-dual-control.nas</file>
    </dual_control>
  </nasal>

  <sim include="Systems/Lockheed1049h-views.xml">

    <description>Lockheed 1049H Copilot</description>
    <flight-model>null</flight-model>

    <menubar>
      <default>
        <menu n="100">
          <label>Constellation</label>
          <enabled type="bool">true</enabled>
          <item>
            <label>Select MP-Pilot</label>
            <binding>
              <command>nasal</command>
              <script>
                dual_control_tools.copilot_dialog.show(aircraft_dual_control.pilot_type);
              </script>
            </binding>
          </item>
        </menu>
      </default>
    </menubar>

    <model>
      <path>Aircraft/Lockheed1049h/Models/L1049h-Copilot.xml</path>
      <livery>
        <file type="string">EasternGSF</file>
      </livery>
    </model> 

    <view n="0"> <!-- the default view is the copilot's, not the pilot view -->
      <name>Copilot View</name>
      <type>lookfrom</type>
      <internal type="bool">true</internal>
      <config>
        <default-field-of-view-deg type="double">82.0</default-field-of-view-deg>
        <x-offset-m archive="y">0.45</x-offset-m>
        <y-offset-m archive="y">1.24</y-offset-m>
        <z-offset-m archive="y">2.89</z-offset-m>
        <pitch-offset-deg>-11</pitch-offset-deg>
      </config>
    </view>

  </sim>

</PropertyList>
