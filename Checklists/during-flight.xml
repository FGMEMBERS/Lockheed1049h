<PropertyList> 
  <title>DURING FLIGHT</title> 
  <item>
    <name>Before taxiing / takeoff</name>
    <value>COMPLETED</value>
  </item>	

  <item>
    <name>GEARS</name>
    <value>UP</value>
    <marker>
      <x-m>-15.1942</x-m>
      <y-m>0.0727</y-m>
      <z-m>0.3504</z-m>
      <scale>4.4876</scale>
    </marker>
    <condition>
      <equals>
        <property>gear/gear[0]/position-norm</property>
        <value>0</value>
      </equals>
    </condition>		
    <binding>
      <command>property-assign</command>
      <property>controls/gear/gear-down</property>
      <value>0</value>
    </binding>    
    <binding>
      <command>property-toggle</command>
      <property>sim/sound/switch1</property>
    </binding>
  </item>

  <item>
    <name>FLAPS</name>
    <value>UP</value>
    <marker>
      <x-m>-15.5719</x-m>
      <y-m>0.1116</y-m>
      <z-m>0.8793</z-m>
      <scale>4.4876</scale>
    </marker>
    <condition>
      <equals>
        <property>controls/flight/flaps</property>
        <value>0</value>
      </equals>
    </condition>		
    <binding>
      <command>nasal</command>
      <script>controls.flapsDown(-4)</script>
    </binding>    
    <binding>
      <command>property-toggle</command>
      <property>sim/sound/switch1</property>
    </binding>
  </item>

  <item>
    <name>CROSSFEED VALVES</name>
    <value>CHECK</value>
    <marker>
      <x-m>-14.5397</x-m>
      <y-m>0.7041</y-m>
      <z-m>0.1107</z-m>
      <scale>4.9339</scale>
    </marker>
  </item>

  <item>
    <name>COWL FLAPS</name>
    <value>OPEN</value>
    <marker>
      <x-m>-14.4818</x-m>
      <y-m>0.8190</y-m>
      <z-m>0.6198</z-m>
      <scale>4.6529</scale>
    </marker>
    <condition>
      <and>
        <greater-than>
	  <property>controls/engines/engine[0]/cowl-flaps-norm</property>
	  <value>0.8</value>
        </greater-than>
        <greater-than>
	  <property>controls/engines/engine[1]/cowl-flaps-norm</property>
	  <value>0.8</value>
        </greater-than>
        <greater-than>
	  <property>controls/engines/engine[2]/cowl-flaps-norm</property>
	  <value>0.8</value>
        </greater-than>
        <greater-than>
	  <property>controls/engines/engine[3]/cowl-flaps-norm</property>
	  <value>0.8</value>
        </greater-than>
      </and>
    </condition>      
    <binding>
      <command>property-assign</command>
      <property>controls/engines/engine[0]/cowl-flaps-norm</property>
      <value>1</value>
    </binding>     
    <binding>
      <command>property-assign</command>
      <property>controls/engines/engine[1]/cowl-flaps-norm</property>
      <value>1</value>
    </binding>     
    <binding>
      <command>property-assign</command>
      <property>controls/engines/engine[2]/cowl-flaps-norm</property>
      <value>1</value>
    </binding>     
    <binding>
      <command>property-assign</command>
      <property>controls/engines/engine[3]/cowl-flaps-norm</property>
      <value>1</value>
    </binding>    
    <binding>
      <command>property-toggle</command>
      <property>sim/sound/switch1</property>
    </binding>     
  </item>

  <item>
    <name>PROPELLER PITCH</name>
    <value>CRUISE</value>
    <marker>
      <x-m>-14.4818</x-m>
      <y-m>0.9818</y-m>
      <z-m>0.7793</z-m>
      <scale>4.6529</scale>
    </marker>
    <condition>
      <less-than>
        <property>controls/engines/engine[0]/propeller-pitch</property>
        <value>1</value>
      </less-than>
      <less-than>
        <property>controls/engines/engine[1]/propeller-pitch</property>
        <value>1</value>
      </less-than>
      <less-than>
        <property>controls/engines/engine[2]/propeller-pitch</property>
        <value>1</value>
      </less-than>
      <less-than>
        <property>controls/engines/engine[3]/propeller-pitch</property>
        <value>1</value>
      </less-than>
    </condition>
    <binding>
      <command>property-assign</command>
      <property>controls/engines/engine[0]/propeller-pitch</property>
      <value>0.94</value>
    </binding>     
    <binding>
      <command>property-assign</command>
      <property>controls/engines/engine[1]/propeller-pitch</property>
      <value>0.94</value>
    </binding>     
    <binding>
      <command>property-assign</command>
      <property>controls/engines/engine[2]/propeller-pitch</property>
      <value>0.94</value>
    </binding>     
    <binding>
      <command>property-assign</command>
      <property>controls/engines/engine[3]/propeller-pitch</property>
      <value>0.94</value>
    </binding> 		   
  </item>

  <item>
    <name>SUPERCHARGER</name>
    <value>HIGH</value>
    <marker>
      <x-m>-14.2463</x-m>
      <y-m>1.0066</y-m>
      <z-m>0.7793</z-m>
      <scale>4.6529</scale>
    </marker>
    <condition>
      <and>
        <equals>
	  <property>fdm/jsbsim/propulsion/engine[0]/boost-speed</property>
	  <value>1</value>
        </equals>
        <equals>
	  <property>fdm/jsbsim/propulsion/engine[1]/boost-speed</property>
	  <value>1</value>
        </equals>
        <equals>
	  <property>fdm/jsbsim/propulsion/engine[2]/boost-speed</property>
	  <value>1</value>
        </equals>
        <equals>
	  <property>fdm/jsbsim/propulsion/engine[3]/boost-speed</property>
	  <value>1</value>
        </equals>
      </and>
    </condition>
    <binding>
      <command>property-assign</command>
      <property>fdm/jsbsim/propulsion/engine[0]/boost-speed</property>
      <value>1</value>
    </binding>     
    <binding>
      <command>property-assign</command>
      <property>fdm/jsbsim/propulsion/engine[1]/boost-speed</property>
      <value>1</value>
    </binding>     
    <binding>
      <command>property-assign</command>
      <property>fdm/jsbsim/propulsion/engine[2]/boost-speed</property>
      <value>1</value>
    </binding>     
    <binding>
      <command>property-assign</command>
      <property>fdm/jsbsim/propulsion/engine[3]/boost-speed</property>
      <value>1</value>
    </binding> 		   
  </item>	

  <item>
    <name>MIXTURES</name>
    <value>CHECK</value>
    <marker>
      <x-m>-14.1140</x-m>
      <y-m>0.8570</y-m>
      <z-m>0.7752</z-m>
      <scale>4.6529</scale>
    </marker>
  </item>

  <item>
    <name>LANDING LIGHTS / TAXI LIGHTS</name>
    <value>OFF</value>
  </item>

  <item>
    <name>QNH</name>
    <value>CHECK</value>
  </item>

  <item>
    <name>CONTROLL LIGHTS ENGINEER PANEL</name>
    <value>EXTINGUISHED</value>
  </item>

</PropertyList>
