<PropertyList>

  <filter>
    <name>BMEP #1: compute BMEP from engine power and RPM</name>
    <debug>false</debug>
    <type>gain</type>
    <input>
      <expression>
        <div>
          <property>fdm/jsbsim/propulsion/engine[0]/power-hp</property>
          <property>engines/engine[0]/rpm</property>
        </div>
      </expression>
    </input>
    <gain>260.0</gain>
    <output>/engines/engine[0]/bmep</output>
  </filter>

