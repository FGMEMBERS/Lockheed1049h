  <animation>
    <type>rotate</type>
    <object-name>LandingGearLever</object-name>
    <property>controls/gear/gear-down</property>
    <interpolation>
      <entry><ind>0.0</ind><dep>-67</dep></entry>
      <entry><ind>1.0</ind><dep>  0</dep></entry>
    </interpolation>
    <center>
      <x-m>-15.268</x-m>
      <y-m>0.0</y-m>
      <z-m>0.415</z-m>
    </center>
    <axis>
      <x>0.0</x>
      <y>1.0</y>
      <z>0.0</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>PropPitch</object-name>
    <property>controls/engines/engine[0]/propeller-pitch</property>
    <factor>-75</factor>
    <offset-deg>75</offset-deg>   
    <center>
      <x-m>-15.496</x-m>
      <y-m>0.0</y-m>
      <z-m>0.735</z-m>
    </center>
    <axis>
      <x>0.0</x>
      <y>1.0</y>
      <z>0.0</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>FlapLever</object-name>
    <property>controls/flight/flaps</property>
    <interpolation>
      <entry><ind>   0</ind><dep> 0</dep></entry>
      <entry><ind>0.25</ind><dep>65</dep></entry>
      <entry><ind>0.50</ind><dep>75</dep></entry>
      <entry><ind>0.75</ind><dep>85</dep></entry>
      <entry><ind>   1</ind><dep>95</dep></entry>
    </interpolation>
    <center>
      <x-m>-15.496</x-m>
      <y-m>0.0</y-m>
      <z-m>0.735</z-m>
    </center>
    <axis>
      <x>0.0</x>
      <y>1.0</y>
      <z>0.0</z>
    </axis>
  </animation>
  <animation>
    <type>pick</type>
    <object-name>FlapLever</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>controls.flapsDown(1)</script>
      </binding>
      <mod-up>
        <binding>
          <command>nasal</command>
          <script>controls.flapsDown(0)</script>
        </binding>
      </mod-up>
    </action>
  </animation>
  <animation>
    <type>pick</type>
    <object-name>FlapLever</object-name>
    <action>
      <button>1</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>controls.flapsDown(-1)</script>
      </binding>
      <mod-up>
        <binding>
          <command>nasal</command>
          <script>controls.flapsDown(0)</script>
        </binding>
      </mod-up>
    </action>
  </animation>

