  <animation>
    <type>rotate</type>
    <object-name>ElevatorTab</object-name>
    <property>controls/flight/elevator-trim</property>
    <factor>-1080</factor>
    <center>
      <x-m>-15.496</x-m>
      <y-m>0.0</y-m>
      <z-m>0.735</z-m>
    </center>
