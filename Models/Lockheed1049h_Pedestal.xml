    <object-name>ParkingBrakeTubeR</object-name>
    <object-name>ParkingBrakeLeverL</object-name>
    <object-name>ParkingBrakeLeverR</object-name>
    <object-name>ParkingBrakeSupportL</object-name>
    <object-name>ParkingBrakeSupportR</object-name>
    <object-name>ElevatorBooster</object-name>
    <object-name>ElBoosterBracket</object-name>
    <object-name>APKnobPitch</object-name>
    <object-name>APKnobHdg</object-name>
    <object-name>ElevatorTab</object-name>
    <object-name>RudderTab</object-name>
    <object-name>AileronTab</object-name>
    <object-name>RudderTabCursor</object-name>
    <object-name>AileronTabCursor</object-name>
    <object-name>RudderTabCursorFace</object-name>
    <object-name>AileronTabCursorFace</object-name>
    <object-name>RudderTabNeedle</object-name>
    <object-name>AileronTabNeedle</object-name>
    <object-name>LandingGearLever</object-name>
