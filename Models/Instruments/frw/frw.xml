<PropertyList> 
    
  <path>frw.ac</path>
    
  <animation>
    <object-name>fond</object-name>
    <object-name>visses</object-name>
    <object-name>btnStartStop</object-name>
    <object-name>btnReset</object-name>
    <object-name>btnMode</object-name>
    <object-name>activeMode</object-name>
    <object-name>face</object-name>
    <object-name>needle1</object-name>
    <object-name>needle2</object-name>
    <object-name>needle3</object-name>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>vitre</object-name>
  </animation>

  <!-- START the swing-effect -->
  <animation>
    <type>rotate</type>
    <object-name>fond</object-name>
    <object-name>visses</object-name>
    <object-name>btnStartStop</object-name>
    <object-name>btnReset</object-name>
    <object-name>btnStartStopOut</object-name>
    <object-name>btnResetOut</object-name>
    <object-name>btnMode</object-name>
    <object-name>activeMode</object-name>
    <object-name>face</object-name>
    <object-name>needle1</object-name>
    <object-name>needle2</object-name>
    <object-name>needle3</object-name>
    <object-name>vitre</object-name>
    <property>/orientation/roll-deg</property>
    <min> -70 </min>
    <max> 50</max>
    <interpolation>
      <entry><ind>-90.0</ind><dep>-90.0</dep></entry>
      <entry><ind> 90.0</ind><dep> 90.0</dep></entry>
    </interpolation>
    <center> 
      <x-m> 0 </x-m>
      <y-m> 0 </y-m>
      <z-m> 0 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>fond</object-name>
    <object-name>visses</object-name>
    <object-name>btnStartStop</object-name>
    <object-name>btnReset</object-name>
    <object-name>btnStartStopOut</object-name>
    <object-name>btnResetOut</object-name>
    <object-name>btnMode</object-name>
    <object-name>activeMode</object-name>
    <object-name>face</object-name>
    <object-name>needle1</object-name>
    <object-name>needle2</object-name>
    <object-name>needle3</object-name>
    <object-name>vitre</object-name>
    <property>/orientation/pitch-deg</property>
    <min> 5 </min>
    <max> 85 </max>    
    <interpolation>
      <entry><ind>-90.0</ind><dep>-90.0</dep></entry>
      <entry><ind> 90.0</ind><dep> 90.0</dep></entry>
    </interpolation>
    <center> 
      <x-m> 0 </x-m>
      <y-m> 0 </y-m>
      <z-m> 0 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>
  <!-- the END of swing-effect -->

  <animation>
    <type>material</type>
    <object-name>face</object-name>
    <object-name>activeMode</object-name>
    <object-name>needle1</object-name>
    <object-name>needle2</object-name>
    <object-name>needle3</object-name>
    <emission>
      <red>0.8</red>
      <green>0.4</green>
      <blue>0.2</blue>
      <factor-prop>/controls/lighting/panel-norm</factor-prop>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>btnStartStop</object-name>
    <object-name>btnReset</object-name>
    <object-name>btnMode</object-name>
    <emission>
      <red>0.25</red>
      <green>0.25</green>
      <blue>0.25</blue>
      <factor-prop>/controls/lighting/panel-norm</factor-prop>
    </emission>
  </animation>

  <animation> 
    <type>rotate</type>
    <object-name>needle1</object-name>
    <property>/instrumentation/frw/flight-time/minutes</property>
    <interpolation>
      <entry><ind> 0</ind><dep> 0 </dep></entry>
      <entry><ind>60</ind><dep>360</dep></entry>
    </interpolation>
    <center> 
      <x-m> 0 </x-m>
      <y-m> 0 </y-m>
      <z-m>-0.190 </z-m>
    </center>
    <axis> 
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>
    
  <animation> 
    <type>rotate</type>
    <object-name>needle2</object-name>
    <property>/instrumentation/frw/flight-time/hours</property>
    <interpolation>
      <entry><ind> 0</ind><dep> 0 </dep></entry>
      <entry><ind>60</ind><dep>360</dep></entry>
    </interpolation>
    <center>   
      <x-m> 0 </x-m> 
      <y-m> 0 </y-m>
      <z-m>-0.190 </z-m>
    </center>
    <axis> 
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>
    
  <animation> 
    <type>rotate</type>
    <object-name>needle3</object-name>
    <property>/instrumentation/frw/flight-time/seconds</property>
    <interpolation>
      <entry><ind> 0</ind><dep> 0 </dep></entry>
      <entry><ind>60</ind><dep>360</dep></entry>
    </interpolation>
    <center>  
      <x-m> 0 </x-m>
      <y-m> 0 </y-m>
      <z-m>-0.190 </z-m>
    </center>
    <axis> 
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>
   <!-- Start and Stop Button -->
    <animation>
      <type>select</type>
      <object-name>btnStartStop</object-name>
      <condition>
        <not-equals>
          <property>/instrumentation/frw/btn-mode</property>
          <value>1</value>
        </not-equals>
      </condition>
    </animation>

   <animation>
    <type>translate</type>
    <object-name>btnStartStop</object-name>
    <property>/instrumentation/frw/btn-start-stop</property>
    <factor>0.002</factor>
    <axis>
     <x>0</x>
     <y>-0.5</y>
     <z>-0.5</z>
    </axis>
   </animation>

    <animation>
      <type>pick</type>
      <object-name>btnStartStop</object-name>
      <visible>true</visible>
      <action>
        <button>0</button>
        <repeatable>false</repeatable>
        <binding>
          <command>property-toggle</command>
          <property>/instrumentation/frw/btn-start-stop</property>
        </binding>
        <mod-up>
          <binding>
            <command>property-toggle</command>
            <property>/instrumentation/frw/btn-start-stop</property>
          </binding>
        </mod-up>
        <binding>
          <command>nasal</command>
          <script>Lockheed1049h.frw_start_stop()</script>
        </binding>
        <binding>
          <command>property-toggle</command>
          <property>/sim/sound/switch2</property>
        </binding>
      </action>
    </animation>
   <!-- Reset - Button -->
    <animation>
      <type>select</type>
      <object-name>btnReset</object-name>
      <condition>
        <not-equals>
          <property>/instrumentation/frw/btn-mode</property>
          <value>1</value>
        </not-equals>
      </condition>
    </animation>

   <animation>
    <type>translate</type>
    <object-name>btnReset</object-name>
    <property>/instrumentation/frw/btn-reset</property>
    <factor>0.002</factor>
    <axis>
     <x>0</x>
     <y>0.5</y>
     <z>-0.5</z>
    </axis>
   </animation>

    <animation>
      <type>pick</type>
      <object-name>btnReset</object-name>
      <visible>true</visible>
      <action>
        <button>0</button>
        <repeatable>false</repeatable>
        <binding>
          <command>property-toggle</command>
          <property>/instrumentation/frw/btn-reset</property>
        </binding>
        <mod-up>
          <binding>
            <command>property-toggle</command>
            <property>/instrumentation/frw/btn-reset</property>
          </binding>
        </mod-up>
        <binding>
          <command>nasal</command>
          <script>Lockheed1049h.frw_reset()</script>
        </binding>
        <binding>
          <command>property-toggle</command>
          <property>/sim/sound/switch2</property>
        </binding>
      </action>
    </animation>

  <!-- Mode -Button -->
   <animation>
    <type>translate</type>
    <object-name>btnMode</object-name>
    <property>/instrumentation/frw/btn-mode</property>
    <factor>0.002</factor>
    <axis>
     <x>0</x>
     <y>0</y>
     <z>1</z>
    </axis>
   </animation>

    <animation>
      <type>select</type>
      <object-name>activeMode</object-name>
      <condition>
        <equals>
          <property>/instrumentation/frw/btn-mode</property>
          <value>1</value>
        </equals>
      </condition>
    </animation>

    <animation>
      <type>pick</type>
      <object-name>btnMode</object-name>
      <visible>true</visible>
      <action>
        <button>0</button>
        <repeatable>false</repeatable>
        <binding>
          <command>property-toggle</command>
          <property>/instrumentation/frw/btn-mode</property>
        </binding>
			  <binding>
				  <command>nasal</command>
				  <script>Lockheed1049h.frw_mode()</script>
			  </binding>
        <binding>
          <command>property-toggle</command>
          <property>/sim/sound/switch2</property>
        </binding>
      </action>
    </animation>

    <!-- The two fake button start_stop and reset if btn-mode on -->    
    <animation>
      <type>select</type>
      <object-name>btnStartStopOut</object-name>
      <condition>
        <equals>
          <property>/instrumentation/frw/btn-mode</property>
          <value>1</value>
        </equals>
      </condition>
    </animation>

    <animation>
      <type>select</type>
      <object-name>btnResetOut</object-name>
      <condition>
        <equals>
          <property>/instrumentation/frw/btn-mode</property>
          <value>1</value>
        </equals>
      </condition>
    </animation>

    <!-- Click on the vitre showing the flighttime on the screen -->    
    <animation>
      <type>pick</type>
      <object-name>vitre</object-name>
      <visible>true</visible>
      <action>
        <button>0</button>
        <repeatable>false</repeatable>
			  <binding>
				  <command>nasal</command>
				  <script>Lockheed1049h.frw_show_time_on_screen()</script>
			  </binding>
      </action>
    </animation>
    
</PropertyList>
