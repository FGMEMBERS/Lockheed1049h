<?xml version="1.0"?>

<PropertyList>

  <path>landing_gear.ac</path>

  <!-- Gear Unlocked -->
  <animation>
    <type>select</type>
    <object-name>LampUnlockedOn</object-name>
    <condition>
      <and>
        <greater-than>
          <property>gear/gear[0]/position-norm</property>
          <value>0</value>
        </greater-than>
        <less-than>
          <property>gear/gear[0]/position-norm</property>
          <value>1</value>
        </less-than>
      </and>
    </condition>
  </animation>
  <animation>
    <type>select</type>
    <object-name>LampUnlocked</object-name>
    <condition>
      <or>
        <equals>
          <property>gear/gear[0]/position-norm</property>
          <value>0</value>
        </equals>
        <equals>
          <property>gear/gear[0]/position-norm</property>
          <value>1</value>
        </equals>
      </or>
    </condition>
  </animation>

  <!-- Nose -->
  <animation>
    <type>select</type>
    <object-name>LampNoseOn</object-name>
    <condition>
      <equals>
        <property>gear/gear[0]/position-norm</property>
        <value>1</value>
      </equals>
    </condition>
  </animation>
  <animation>
    <type>select</type>
    <object-name>LampNose</object-name>
    <condition>
      <less-than>
        <property>gear/gear[0]/position-norm</property>
        <value>1</value>
      </less-than>
    </condition>
  </animation>

  <!-- Left -->
  <animation>
    <type>select</type>
    <object-name>LampLeftOn</object-name>
    <condition>
      <equals>
        <property>gear/gear[1]/position-norm</property>
        <value>1</value>
      </equals>
    </condition>
  </animation>
  <animation>
    <type>select</type>
    <object-name>LampLeft</object-name>
    <condition>
      <less-than>
        <property>gear/gear[1]/position-norm</property>
        <value>1</value>
      </less-than>
    </condition>
  </animation>

  <!-- Right -->
  <animation>
    <type>select</type>
    <object-name>LampRightOn</object-name>
    <condition>
      <equals>
        <property>gear/gear[2]/position-norm</property>
        <value>1</value>
      </equals>
    </condition>
  </animation>
  <animation>
    <type>select</type>
    <object-name>LampRight</object-name>
    <condition>
      <less-than>
        <property>gear/gear[2]/position-norm</property>
        <value>1</value>
      </less-than>
    </condition>
  </animation>

</PropertyList>

