<PropertyList>

<path>amps_dc.ac</path>

<animation>
  <type>material</type>
  <object-name>AmpsDC.FaceBack</object-name>
  <object-name>AmpsDC.Needle1</object-name>
  <object-name>AmpsDC.Needle2</object-name>
  <emission>
    <red>0.8</red>
    <green>0.4</green>
    <blue>0.2</blue>
    <factor-prop>/controls/lighting/panel-norm</factor-prop>
  </emission>
</animation>

<animation>
  <type>rotate</type>
  <object-name>AmpsDC.Needle1</object-name>
  <property>/systems/electrical/power-source[0]/amps</property>
  <interpolation>
    <entry><ind>  0</ind><dep> 36</dep></entry>
    <entry><ind>200</ind><dep>  0</dep></entry>
    <entry><ind>400</ind><dep>-36</dep></entry>
  </interpolation>
  <center>
    <x-m>-0.0251</x-m>
    <y-m>0</y-m>
    <z-m>0</z-m>
  </center>
  <axis>
    <x>0</x>
    <y>1</y>
    <z>0</z>
  </axis>
</animation>

<animation>
  <type>rotate</type>
  <object-name>AmpsDC.Needle2</object-name>
  <property>/systems/electrical/power-source[1]/amps</property>
  <interpolation>
    <entry><ind>  0</ind><dep>-36</dep></entry>
    <entry><ind>200</ind><dep>  0</dep></entry>
    <entry><ind>400</ind><dep> 36</dep></entry>
  </interpolation>
  <center>
    <x-m>0.0251</x-m>
    <y-m>0</y-m>
    <z-m>0</z-m>
  </center>
  <axis>
    <x>0</x>
    <y>1</y>
    <z>0</z>
  </axis>
</animation>

</PropertyList>
