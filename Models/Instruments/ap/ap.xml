<PropertyList>
    <path>ap.ac</path>

    <animation>
      <type>material</type>
      <object-name>bg</object-name>
      <emission>
          <red>0.128</red>
          <green>0.064</green>
          <blue>0.032</blue>
          <factor-prop>/controls/lighting/panel-norm</factor-prop>
      </emission>
    </animation>

    <animation>
        <type>material</type>
        <object-name>altOff</object-name>
        <object-name>apOff</object-name>
        <object-name>apprOff</object-name>
        <object-name>hdgOff</object-name>
        <object-name>iasOff</object-name>
        <object-name>navOff</object-name>
        <object-name>apprOff</object-name>
        <object-name>gpsOff</object-name>
        <object-name>pitchOff</object-name>
        <emission>
          <red>0.8</red>
          <green>0.4</green>
          <blue>0.2</blue>
          <factor-prop>/controls/lighting/panel-norm</factor-prop>
        </emission>
    </animation>

    <animation>
        <type>material</type>
        <object-name>altOn</object-name>
        <object-name>apOn</object-name>
        <object-name>apprOn</object-name>
        <object-name>hdgOn</object-name>
        <object-name>iasOn</object-name>
        <object-name>navOn</object-name>
        <object-name>apprOn</object-name>
        <object-name>gpsOn</object-name>
        <object-name>pitchOn</object-name>
        <emission>
            <red>0.02</red>
            <green>0.9</green>
            <blue>0.0</blue>
            <factor-prop>/controls/lighting/panel-norm</factor-prop>
        </emission>
    </animation>

    <animation>
        <type>select</type>
        <object-name>altOn</object-name>
        <object-name>apOn</object-name>
        <object-name>apprOn</object-name>
        <object-name>hdgOn</object-name>
        <object-name>iasOn</object-name>
        <object-name>navOn</object-name>
        <object-name>apprOn</object-name>
        <object-name>gpsOn</object-name>
        <object-name>pitchOn</object-name>
        <condition>
          <greater-than>
            <property>/systems/electrical/bus-dc/volts</property>
            <value>12</value>
          </greater-than>
        </condition>
    </animation>

    <!--################  buttons on the ap-console #################### -->
    <!-- Main Switch AP -->
    <animation>
        <type>select</type>
        <object-name>apOff</object-name>
        <condition>
          <equals>
            <property>/autopilot/switches/ap</property>
            <value>0</value>
          </equals>
        </condition>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>apOff</object-name>
        <property>/autopilot/switches/ap</property>
        <factor>-0.004</factor>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>pick</type>
        <visible>true</visible>
        <object-name>apOff</object-name>
        <action>
            <button>0</button>
            <binding>
              <command>property-assign</command>
              <property>/autopilot/switches/ap</property>
              <value>1</value>
            </binding>
            <binding>
              <command>property-toggle</command>
              <property>/sim/sound/switch3</property>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <visible>true</visible>
        <object-name>apOn</object-name>
        <action>
            <button>0</button>
            <binding>
              <command>property-assign</command>
              <property>/autopilot/switches/ap</property>
              <value>0</value>
            </binding>
            <binding>
              <command>property-toggle</command>
              <property>/sim/sound/switch3</property>
