<?xml version="1.0"?>

<!-- Lockheed Constellation 1049h Pilot Side Upper Hotspot panel -->
<!-- Gary R. Neely 'Buckaroo', 2008                              -->


<PropertyList>

<name>Pilot Side Upper Panel</name>
<background>Aircraft/Lockheed1049h/Panels/transparent-bg.rgb</background>
<w>512</w>
<h>100</h>

<instruments>

  <instrument>
    <name>panel hotspots</name>
    <x>256</x>
    <y>50</y>
    <w>512</w>
    <h>100</h>
    <w-base>512</w-base>
    <h-base>100</h-base>

    <actions>

      <action>
        <name>BeaconLts</name>
        <button>0</button>
        <x>42</x>
        <y>-36</y>
        <w>24</w>
        <h>40</h>
        <binding>
          <command>property-toggle</command>
          <property>/controls/lighting/beacon</property>
        </binding>
      </action>

      <action>
        <name>TailLts</name>
        <button>0</button>
        <x>98</x>
        <y>-36</y>
        <w>24</w>
        <h>40</h>
        <binding>
          <command>property-toggle</command>
          <property>/controls/lighting/tail</property>
        </binding>
      </action>

      <action>
        <name>NavLts</name>
        <button>0</button>
        <x>140</x>
        <y>-36</y>
        <w>24</w>
        <h>40</h>
        <binding>
          <command>property-toggle</command>
          <property>/controls/lighting/nav</property>
        </binding>
      </action>

      <action>
        <name>TaxiLts</name>
        <button>0</button>
        <x>168</x>
        <y>-36</y>
        <w>24</w>
        <h>40</h>
        <binding>
          <command>property-toggle</command>
          <property>/controls/lighting/taxi</property>
        </binding>
      </action>

    </actions>

  </instrument>

</instruments>

</PropertyList>


