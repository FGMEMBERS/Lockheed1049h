<?xml version="1.0"?>

<!-- Lockheed Constellation 1049h Engineer MJB Hotspot panel -->
<!-- Gary R. Neely 'Buckaroo', 2009                          -->


<PropertyList>

  <name>Engineer MJB Panel</name>
  <background>Panels/transparent-bg.rgb</background>
  <w>256</w>
  <h>512</h>

  <instruments>

    <instrument>
      <name>panel hotspots</name>
      <x>128</x>
      <y>256</y>
      <w>256</w>
      <h>512</h>
      <w-base>256</w-base>
      <h-base>512</h-base>

      <actions>


        <!-- Engine Primer -->

        <action>
          <name>EngPrime</name>
          <button>0</button>
          <x>-10</x>
          <y>-239</y>
          <w>16</w>
          <h>30</h>
        </action>

        <!-- Engine Starter -->

        <action>
          <name>EngStart</name>
          <button>0</button>
          <x>23</x>
          <y>-239</y>
          <w>16</w>
          <h>30</h>
          <binding>
            <command>nasal</command>
            <script>Lockheed1049h.engine_starter();</script>
          </binding>
          <mod-up>
            <binding>
              <command>nasal</command>
              <script>props.setAll("/controls/engines/engine", "starter", 0)</script>
            </binding>
          </mod-up>
        </action>

      </actions>
    </instrument>
  </instruments>
</PropertyList>
