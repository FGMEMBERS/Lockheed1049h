<?xml version="1.0"?>

<!-- Lockheed Constellation 1049h Overhead Fuel Hotspot panel -->
<!-- Gary R. Neely 'Buckaroo', 2008                           -->


<!-- Panel disabled as it weirdly interferes with pilot light switch panel. -->


<PropertyList>

  <name>Overhead Fuel Panel</name>
  <background>Panels/transparent-bg.rgb</background>
  <w>256</w>
  <h>34</h>

  <instruments>

    <instrument>
      <name>panel hotspots</name>
      <x>128</x>
      <y>17</y>
      <w>256</w>
      <h>34</h>
      <w-base>256</w-base>
      <h-base>34</h-base>

      <actions>

        <action>
          <name>Engine cutoff 1</name>
          <button>0</button>
          <x>-128</x>
          <y>-17</y>
          <w>64</w>
          <h>34</h>
          <binding>
            <command>property-adjust</command>
            <property>/controls/fuel/enginevalves[0]/valve</property>
            <step>1</step>
            <min>0</min>
            <max>4</max>
            <wrap>true</wrap>
          </binding>
        </action>

        <action>
          <name>Engine cutoff 2</name>
          <button>0</button>
          <x>-64</x>
          <y>-17</y>
          <w>64</w>
          <h>34</h>
          <binding>
            <command>property-adjust</command>
            <property>/controls/fuel/enginevalves[1]/valve</property>
            <step>1</step>
            <min>0</min>
            <max>4</max>
            <wrap>true</wrap>
          </binding>
        </action>

        <action>
          <name>Engine cutoff 3</name>
          <button>0</button>
          <x>0</x>
          <y>-17</y>
          <w>64</w>
          <h>34</h>
          <binding>
            <command>property-adjust</command>
            <property>/controls/fuel/enginevalves[2]/valve</property>
            <step>1</step>
            <min>0</min>
            <max>4</max>
            <wrap>true</wrap>
          </binding>
        </action>

        <action>
          <name>Engine cutoff 4</name>
          <button>0</button>
          <x>64</x>
          <y>-17</y>
          <w>64</w>
          <h>34</h>
          <binding>
            <command>property-adjust</command>
            <property>/controls/fuel/enginevalves[3]/valve</property>
            <step>1</step>
            <min>0</min>
            <max>4</max>
            <wrap>true</wrap>
          </binding>
        </action>

      </actions>

    </instrument>

  </instruments>

</PropertyList>


