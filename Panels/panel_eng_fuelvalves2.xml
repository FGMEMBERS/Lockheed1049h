          <command>property-adjust</command>
          <property>/controls/fuel/tankvalves[1]/valve</property>
          <step>-1</step>
          <min>0</min>
          <max>2</max>
          <wrap>false</wrap>
        </binding>
      </action>
      <action>
        <name>Tank2ValveUp</name>
