          <command>property-adjust</command>
          <property>/controls/fuel/tankvalves[2]/valve</property>
          <step>-1</step>
          <min>0</min>
          <max>2</max>
          <wrap>false</wrap>
        </binding>
      </action>
      <action>
        <name>Tank3ValveUp</name>
        <button>1</button>
        <x>0</x>
        <y>-4</y>
        <w>8</w>
        <h>8</h>
