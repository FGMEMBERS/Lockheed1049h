          <step>1</step>
          <min>0</min>
          <max>2</max>
          <wrap>false</wrap>
        </binding>
      </action>

      <action>
        <name>Tank3ValveDn</name>
        <button>0</button>
        <x>0</x>
        <y>-4</y>
        <w>8</w>
        <h>8</h>
